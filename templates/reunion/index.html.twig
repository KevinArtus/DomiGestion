{% extends 'base.html.twig' %}

{% block title %}Reunion index{% endblock %}

{% block body %}
    <h1>Reunion index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>MontantHt</th>
                <th>MontantTTC</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reunion in reunions %}
            <tr>
                <td>{{ reunion.id }}</td>
                <td>{{ reunion.date ? reunion.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ reunion.montantHt }}</td>
                <td>{{ reunion.montantTTC }}</td>
                <td>
                    <a href="{{ path('reunion_show', {'id': reunion.id}) }}">show</a>
                    <a href="{{ path('reunion_edit', {'id': reunion.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('reunion_new') }}">Create new</a>
{% endblock %}
